<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.bugsby.datalayer.model.Involvement" table="involvements" lazy="false">
        <id name="id" column="id" type="java.lang.Long">
            <generator class="increment"/>
        </id>
        <property name="role" column="role">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.bugsby.datalayer.model.Role</param>
                <param name="useNamed">true</param>
            </type>
        </property>
        <many-to-one name="user" column="user_id" class="com.bugsby.datalayer.model.User" lazy="false"/>
        <many-to-one name="project" column="project_id" class="com.bugsby.datalayer.model.Project" lazy="false"/>
    </class>
</hibernate-mapping>